{
  "manifest_version": 3,
  "name": "Cerebr",
  "version": "1.6.1",
  "description": "Cerebr - 智能AI聊天助手",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "commands",
    "activeTab",
    "tabs",
    "webRequest"
  ],
  "host_permissions": ["<all_urls>", "file:///*"],
  "action": {
    "default_title": "打开 Cerebr 侧边栏",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "commands": {
    "open_sidebar": {
      "suggested_key": {
        "default": "Alt+Z",
        "mac": "MacCtrl+Z"
      },
      "description": "打开 Cerebr 侧边栏"
    },
    "close_sidebar": {
      "suggested_key": {
        "default": "Alt+C",
        "mac": "MacCtrl+C"
      },
      "description": "关闭 Cerebr 侧边栏"
    },
    "clear_chat": {
      "suggested_key": {
        "default": "Alt+X",
        "mac": "MacCtrl+X"
      },
      "description": "清空聊天记录"
    },
    "quick_summary": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "MacCtrl+S"
      },
      "description": "快速总结当前页面"
    },
    "toggle_temp_mode": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "切换临时模式"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [{
    "resources": [
      "sidebar.html",
      "lib/marked.min.js",
      "lib/highlight.min.js",
      "lib/github-dark.css",
      "lib/katex.min.js",
      "lib/katex.min.css",
      "lib/auto-render.min.js",
      "sidebar-message-handler.js",
      "lib/fonts/*",
      "lib/pdf.js",
      "lib/pdf.worker.js"
    ],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/pdf.js",
        "element-picker.js",
        "content.js"
      ],
      "run_at": "document_start"
    }
  ]
}